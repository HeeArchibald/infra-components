{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "isolatedModules": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "declaration": true,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./dist",
        "typeRoots": [
            "./node-modules/@types"
        ],
        "types": ["core-js"]
    },
    "exclude": [
        "assets",
        "build",
        "config",
        "bundle",
        "dist",
        "node_modules",
        "bower_components"
    ],
    "files": [
        "./src/index.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "debug": true
    }
}
